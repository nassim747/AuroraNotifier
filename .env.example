# Aurora Alert App Environment Variables

# OpenWeather API Key for cloud cover data
OPENWEATHER_KEY=your_openweather_api_key_here

# Firebase Cloud Messaging Server Key for push notifications
FCM_SERVER_KEY=your_fcm_server_key_here

# Database Configuration
DATABASE_URL=sqlite:///data/aurora_alert.db

# App Configuration
RADIUS_KM=250
PROB_THRESHOLD=15
CLOUD_MAX=40
COOLDOWN_H=3

# Scheduler Configuration
CHECK_INTERVAL_MIN=5

# Logging
LOG_LEVEL=INFO